[32m+[m[32mconst LogoCard = ({ logo, title, onClick, selected }: LogoCard) => {[m
[32m+[m[32m  return ([m
[32m+[m[32m    <motion.div[m
[32m+[m[32m      role={onClick ? 'button' : undefined}[m
[32m+[m[32m      tabIndex={onClick ? 0 : undefined}[m
[32m+[m[32m      onClick={() => onClick && onClick()}[m
[32m+[m[32m      onKeyDown={(e) => {[m
[32m+[m[32m        if (onClick && (e.key === 'Enter' || e.key === ' ')) onClick();[m
[32m+[m[32m      }}[m
[32m+[m[32m      aria-pressed={selected}[m
[32m+[m[32m      className={`bg-white dark:bg-gray-800 shadow-lg rounded-xl p-6 flex flex-col items-center text-center border ${selected ? 'border-blue-600 dark:border-blue-300' : 'border-blue-500 dark:border-blue-400'} cursor-pointer`}[m
[32m+[m[32m      initial="hidden"[m
[32m+[m[32m      whileInView="visible"[m
[32m+[m[32m      viewport={{ once: true, amount: 0.2 }}[m
[32m+[m[32m      variants={logoCardAnimations.card}[m
[32m+[m[32m      whileHover="hover"[m
[32m+[m[32m      animate={selected ? 'hover' : 'visible'}[m
[32m+[m[32m    >[m
[32m+[m[32m      <motion.div[m
[32m+[m[32m        className="w-24 h-24 bg-yellow-300 flex items-center justify-center rounded-full"[m
[32m+[m[32m        whileHover="hover"[m
[32m+[m[32m        variants={logoCardAnimations.logoContainer}[m
[32m+[m[32m      >[m
[32m+[m[32m        <img src={logo} alt={title} className="w-12 h-12" />[m
[32m+[m[32m      </motion.div>[m
[32m+[m
[32m+[m[32m      <h3 className="text-xl font-bold text-blue-600 dark:text-blue-400 mt-4">[m
[32m+[m[32m        {title}[m
[32m+[m[32m      </h3>[m
[32m+[m[32m    </motion.div>[m
[32m+[m[32m  );[m
[32m+[m[32m};[m
